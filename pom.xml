<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http//www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.clojure</groupId>
  <artifactId>clojure</artifactId>
  <name>clojure</name>
  <packaging>clojure</packaging>
  <version>1.3.0-SNAPSHOT</version>

  <url>http://clojure.org/</url>
  <description>Clojure core environment and runtime library.</description>

  <parent>
    <groupId>org.clojure</groupId>
    <artifactId>pom.baseline</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>

  <build>
    <resources>
      <resource>
	<directory>src/main/resources</directory>
	<filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
	<groupId>com.theoryinpractise</groupId>
	<artifactId>clojure-maven-plugin</artifactId>
	<version>1.3.5</version>
	<extensions>true</extensions>
	<executions>
	  <execution>
	    <id>default-compile</id>
	    <configuration>
	      <namespaces>
		<!-- clojure.parallel requires jsr166y.jar -->
		<namespace>!clojure\.parallel</namespace>
	      </namespaces>
	    </configuration>
	  </execution>
	  <execution>
	    <id>default-testCompile</id>
	    <configuration>
	      <!-- Only 2 test namespaces need AOT-compilation -->
	      <testDeclaredNamespaceOnly>true</testDeclaredNamespaceOnly>
	      <testNamespaces>
		<testNamespace>clojure\.test-clojure\.protocols\.examples</testNamespace>
		<testNamespace>clojure\.test-clojure\.genclass\.examples</testNamespace>
	      </testNamespaces>
	    </configuration>
	  </execution>
	</executions>
      </plugin>
    </plugins>
  </build>
</project>
